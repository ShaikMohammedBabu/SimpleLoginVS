<% layout('layouts/main')  -%>

    <div style="width:800px; margin:0 auto;" ng-controller="registerCtrl">
        <div class="card text-center" style="padding:2rem;margin:20px;">
            <div class="form-group row">
                <div class="offset-sm-4">
                    <a href="/login">Already a member? Login Here</a>
                </div>
            </div>
            <div class="row">
                <h4>{{success}}</h4>
            </div>
            <form ng-submit="register()">
                <div class="form-group row">
                    <label for="firstname" class="col-3 col-form-label">Firsname</label>
                    <div class="col-7">
                        <input class="form-control" type="text" placeholder="Firstname" ng-model="firstname" id="firstname" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="lastname" class="col-3 col-form-label">Lastname</label>
                    <div class="col-7">
                        <input class="form-control" type="text" placeholder="Lastname" ng-model="lastname" id="lastname">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="username" class="col-3 col-form-label">Username</label>
                    <div class="col-7">
                        <input class="form-control" type="text" placeholder="Username" ng-model="username" id="username" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="email" class="col-3 col-form-label">Email</label>
                    <div class="col-7">
                        <input class="form-control" type="email" placeholder="Email" ng-model="email" id="email" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="url" class="col-3 col-form-label">Website URL</label>
                    <div class="col-7">
                        <input class="form-control" type="url" placeholder="Your company URL" ng-model="url" id="url">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="telephone" class="col-3 col-form-label">Telephone</label>
                    <div class="col-7">
                        <input class="form-control" type="tel" placeholder="Telephone" ng-model="telephone" id="telephone">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="password" class="col-3 col-form-label">Password</label>
                    <div class="col-7">
                        <input class="form-control" type="password" placeholder="Password" ng-model="password" id="password" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="mobile" class="col-3 col-form-label">Mobile Number</label>
                    <div class="col-7">
                        <input class="form-control" type="number" placeholder="Mobile number" ng-model="mobile" id="mobile" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="birthday" class="col-3 col-form-label">Birthday</label>
                    <div class="col-7">
                        <input class="form-control" type="date" value="2011-08-19" ng-model="birthday" id="birthday">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="gender-group" class="col-3 col-form-label">Gender</label>
                    <div class="col-7">
                        <div id="gender-group">
                            <div class="form-check form-check-inline">
                                <label class="form-check-label">
                                    <input class="form-check-input" type="radio" name="gender" ng-model="gender" id="male" value="male"> Male
                                </label>
                            </div>
                            <div class="form-check form-check-inline">
                                <label class="form-check-label">
                                    <input class="form-check-input" type="radio" name="gender" ng-model="gender" id="female" value="female"> Female
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="terms" class="col-3 col-form-label" >Accept terms&conditions</label>
                    <div class="col-7">
                        <div class="form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" type="checkbox" id="terms" ng-model="terms" value="true">
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="offset-4">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>