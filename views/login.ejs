<% layout('layouts/main')  -%>
<div style="width:800px; margin:0 auto;" ng-controller="loginCtrl">
<div class="card text-center" style="padding:2rem;margin:20px;">
    <form method="post" ng-submit="login()">
        <h4 class="card-title">Login</h4>

        <div class="row">
            <h4>{{error}}</h4>
        
        </div>
        
        <div class="form-group row">
        <label for="example-email-input" class="col-lg-3 col-sm-12 col-form-label">Email</label>
        <div class="col-lg-7 col-sm-12">
            <input class="form-control" type="email" placeholder="Email" ng-model="email" id="example-email-input" required>
        </div>
        </div>


        <div class="form-group row">
        <label for="example-password-input" class="col-lg-3 col-sm-12 col-form-label">Password</label>
        <div class="col-lg-7 col-sm-12">
            <input class="form-control" type="password" placeholder="Password" ng-model="password" id="example-password-input" required>
        </div>
        </div>


        <div class="form-group row">
            <div class="offset-sm-5">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
        </div>
        
        <div class="form-group row">
            <div class="offset-sm-4">
                <a href="/register">Not a member? Register Here</a>
            </div>
        </div>
    </form>
</div>
</div>